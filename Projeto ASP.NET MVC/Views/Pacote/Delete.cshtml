@model CRUDMVC.Models.Pacote

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
<h1 class="titulo-paginas">Excluir</h1>

<h3>Tem certeza que deseja excluir esse pacote?</h3>
<div>
    <h4>Pacote</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Id cliente
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id_cliente)
        </dd>
        <dt class = "col-sm-2">
            Id destino 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id_destino)
        </dd>
        <dt class = "col-sm-2">
            Data da compra
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataCompra)
        </dd>
        <dt class = "col-sm-2">
            Data da viagem
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataViagem)
        </dd>
        <dt class = "col-sm-2">
            Preço
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" style="width:auto"/> 
        <a class="btn btn-primary" asp-action="Index">Voltar</a>
    </form>
</div>
</div>